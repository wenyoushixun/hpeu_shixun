<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    <class name="com.shixun.model.User" table="tt_user">
    <id name="id" column="id">
    <generator class="native"></generator>
    </id>
    
    <property name="username" column="username" length="50"></property>
    <property name="address" column="address" length="50"></property>
    <property name="balance" column="balance" length="50"></property>
    </class>
    </hibernate-mapping>